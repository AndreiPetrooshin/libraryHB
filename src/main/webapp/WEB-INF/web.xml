<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">



    <servlet>
        <servlet-name>SelectServ</servlet-name>
        <servlet-class>controller.ServletSelectAll</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SelectServ</servlet-name>
        <url-pattern>/selectServlet.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteBook</servlet-name>
        <servlet-class>controller.ServletDeleteBook</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteBook</servlet-name>
        <url-pattern>/deleteBook.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddingBookServlet</servlet-name>
        <servlet-class>controller.ServletAddBook</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddingBookServlet</servlet-name>
        <url-pattern>/addedPage.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getById</servlet-name>
        <servlet-class>controller.ServletGetById</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getById</servlet-name>
        <url-pattern>/getById.do</url-pattern>
    </servlet-mapping>

</web-app>